<mvc:View controllerName="de.uniorg.martian.controller.App" displayBlock="true"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:core="sap.ui.core" 
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mc="de.uniorg.martian.control"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
	xmlns="sap.m">
	<App class="app" backgroundImage="mimes/bg_mars_surface_comp.jpg">
		<pages>
			<Page id="hudPage" backgroundDesign="Transparent" enableScrolling="false">
                <customHeader>
                    <Toolbar id="hudToolbar" class="appHeadBar" design="Transparent">
                        <Button id="avatarBtn" class="sapUiTinyMarginEnd hud-avatar" icon="mimes/ares_logo.png" iconDensityAware="false" 
                            tooltip="Ares Logo" press="onNavTo" app:route="welcome" />
                        <Title class="hud-title" text="Mission Cockpit" titleStyle="H1" />
                        <ToolbarSpacer />
                        <mc:AudioVis id="audiovis" class="audiovis" play="{shell>/playAudio}" width="12rem" height="2.8rem" src="media/daXX_stardust.mp3" />
                        <ToolbarSpacer />
                        <ToggleButton
                            id="animateStarsBtn"
                            class="sapMToggleBtnUnstyled"
                            press="onAnimateStarsToggle"
                            icon="sap-icon://favorite"
                            type="Transparent"/>
                        <ToggleButton
                            id="muteBtn"
                            class="sapMToggleBtnUnstyled"
                            press="onPlayAudioToggle"
                            icon="mimes/svg/speaker.svg"
                            iconDensityAware="false" 
                            type="Transparent"/>
                        <ToggleButton
                            visible="{= !${device>/system/phone} }"
                            press="onToggleSideContent"
                            pressed="false"
                            icon="sap-icon://group"
                            type="Transparent"/>
                    </Toolbar>
                </customHeader>
                <l:DynamicSideContent 
                    id="shellDSC" 
                    showSideContent="{shell>/showSideContent}">
                    <l:mainContent id="shellMasterContent">
                        <NavContainer id="rootControl" />
                    </l:mainContent>
                    <l:sideContent id="shellSideContent">
                        <mvc:XMLView viewName="de.uniorg.martian.view.SideContent" />
                    </l:sideContent>
                </l:DynamicSideContent>
