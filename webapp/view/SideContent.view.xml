                    <core:Fragment fragmentName="de.uniorg.martian.view.Crew" type="XML" />
                </IconTabFilter>
                <IconTabFilter id="commTab" text="INTERCOM">
                    <mvc:XMLView id="notificationsView" viewName="de.uniorg.martian.view.Notifications" />
                </IconTabFilter>
            </items>
        </IconTabBar>
    </Page>
